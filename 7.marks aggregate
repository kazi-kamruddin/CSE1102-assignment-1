#include <stdio.h>

int main () {

    float mark1, mark2, mark3, mark4, mark5, aggr, perc;
    printf ("Marks obtained in Bangla: ");
    scanf ("%f", &mark1);
    printf ("Marks obtained in English: ");
    scanf ("%f", &mark2);
    printf ("Marks obtained in Physics: ");
    scanf ("%f", &mark3);
    printf ("Marks obtained in Chemistry: ");
    scanf ("%f", &mark4);
    printf ("Marks obtained in Math: ");
    scanf ("%f", &mark5);

    aggr = mark1 + mark2 + mark3 + mark4 + mark5;
    perc = aggr/500*100;

    printf ("\n\nAggregate marks: %.2f", aggr);
    printf ("\nPercentage: %.2f%%", perc);

    return 0;
}


